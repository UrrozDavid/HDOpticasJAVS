@{
    ViewBag.Title = "Inventario";
}

<h2>@ViewBag.Title</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Producto</th>
            <th>Código Producto</th>
            <th>Stock</th>
            <th>Precio</th>
            <th>Proveedor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in ViewBag.Productos)
        {
            <tr>
                <td>@producto.Nombre_Producto</td>
                <td>@producto.Codigo_Producto</td>
                <td>@producto.Stock</td>
                <td>@producto.Precio</td>
                <td>@producto.Id_Proveedor</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = producto.Id_Producto })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Details", new { id = producto.Id_Producto })" class="btn btn-info btn-sm">Ver</a>
                    <form method="post" action="@Url.Action("Delete", new { id = producto.Id_Producto })" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Desea eliminar este producto?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
