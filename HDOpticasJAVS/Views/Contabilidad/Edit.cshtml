@{
    ViewBag.Title = "Editar Contabilidad";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Producto</label>
        <input type="number" name="Id_Producto" class="form-control" value="@Model.Id_Producto" required />
    </div>
    <div class="form-group">
        <label>Total</label>
        <input type="number" name="Total" class="form-control" value="@Model.Total" required />
    </div>
    <div class="form-group">
        <label>Número de Factura</label>
        <input type="text" name="Numero_Factura" class="form-control" value="@Model.Numero_Factura" required />
    </div>
    <div class="form-group">
        <label>Fecha</label>
        <input type="date" name="Fecha" class="form-control" value="@Model.Fecha" required />
    </div>
    <div class="form-group">
        <label>Monto</label>
        <input type="number" name="Monto" class="form-control" value="@Model.Monto" required />
    </div>
    <div class="form-group">
        <label>Cliente</label>
        <input type="text" name="Cliente" class="form-control" value="@Model.Cliente" required />
    </div>
    <div class="form-group">
        <label>Tipo de Pago</label>
        <input type="text" name="Tipo_Pago" class="form-control" value="@Model.Tipo_Pago" required />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="text" name="Status" class="form-control" value="@Model.Status" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar Venta</button>
</form>