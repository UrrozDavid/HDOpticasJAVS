@model HDOpticasJAVS.Models.PuntoVenta
@{
    ViewBag.Title = "Editar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label, input, select {
        color: #212529 !important;
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h3>Editar Venta</h3>
        </div>
        <div class="card-body bg-white text-dark">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.Id_Venta)

                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Id_Producto)
                    @Html.TextBoxFor(m => m.Id_Producto, new { @class = "form-control", type = "number" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Cedula_Cliente)
                    @Html.TextBoxFor(m => m.Cedula_Cliente, new { @class = "form-control" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Cantidad)
                    @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Subtotal)
                    @Html.TextBoxFor(m => m.Subtotal, new { @class = "form-control", type = "number", step = "0.01" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.IVA)
                    @Html.TextBoxFor(m => m.IVA, new { @class = "form-control", type = "number", step = "0.01" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Total)
                    @Html.TextBoxFor(m => m.Total, new { @class = "form-control", type = "number", step = "0.01" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Id_MetodoPago)
                    @Html.TextBoxFor(m => m.Id_MetodoPago, new { @class = "form-control", type = "number" })
                </div>

                <button type="submit" class="btn btn-warning">Actualizar</button>
                <a href="@Url.Action("IndexAdmin")" class="btn btn-secondary">Cancelar</a>
            }
        </div>
    </div>
</div>
