@model List<HDOpticasJAVS.Models.TendenciaVentas>

@{
    ViewBag.Title = "Tendencias de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Tendencias de Ventas (Mensuales)</h4>
        </div>
        <div class="card-body">
            <canvas id="ventasChart" height="100"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('ventasChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [@string.Join(",", Model.Select(x => $"'{x.Periodo}'"))],
            datasets: [{
                label: 'Total de Ventas',
                data: [@string.Join(",", Model.Select(x => x.Total))],
                borderColor: '#00B5E2',
                backgroundColor: 'rgba(0, 181, 226, 0.2)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Tendencias Mensuales de Ventas'
                }
            }
        }
    });
</script>
