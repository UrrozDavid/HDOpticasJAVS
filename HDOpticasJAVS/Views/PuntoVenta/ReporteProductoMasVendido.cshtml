@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Reporte: Producto Más Vendido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <div class="card p-4 mb-3">
        @using (Html.BeginForm("ReporteProductoMasVendido", "PuntoVenta", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-5">
                    <label for="fechaInicio">Desde</label>
                    <input type="date" name="fechaInicio" class="form-control" />
                </div>
                <div class="col-md-5">
                    <label for="fechaFin">Hasta</label>
                    <input type="date" name="fechaFin" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Generar</button>
                </div>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="alert alert-info">
            <strong>Rango seleccionado:</strong> @ViewBag.Rango
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID Producto</th>
                    <th>Cantidad Vendida</th>
                    <th>Total Generado (₡)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.CantidadTotal</td>
                        <td>₡@item.MontoTotal</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("ExportarReporteEmpleado", "PuntoVenta")" class="btn btn-success mt-3">Exportar a Excel (CSV)</a>

    }
</div>
    }
