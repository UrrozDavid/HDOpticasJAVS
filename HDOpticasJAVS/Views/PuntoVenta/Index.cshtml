@{
    ViewBag.Title = "Punto de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg w-100" style="max-width: 1100px; background: rgba(0, 0, 0, 0.75); color: #F1E0C6; border-radius: 15px;">
        <div class="card-header text-center" style="background-color: #1A73E8; color: white; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 class="fw-bold" style="font-family: 'Poppins', sans-serif;">@ViewBag.Title</h2>
        </div>
        <div class="card-body" style="font-family: 'Roboto', sans-serif;">
            <div class="row">
                <!-- Selección de productos -->
                <div class="col-md-6">
                    <h4 style="font-family: Raleway; color: #00B5E2;">Seleccionar Producto</h4>
                    <input type="text" class="form-control mb-3" placeholder="Buscar producto..." style="font-family: Roboto; border: 1px solid #A9A9A9;">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover table-bordered">
                            <thead class="table-light text-dark" style="font-family: Raleway;">
                                <tr>
                                    <th>Producto</th>
                                    <th>Precio</th>
                                    <th>Agregar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Gafas de Sol</td>
                                    <td>$50.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-success" style="background-color: #1A73E8;" onclick="showSuccessMessage()">+</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Lentes Recetados</td>
                                    <td>$120.00</td>
                                    <td>
                                        <button class="btn btn-sm btn-success" style="background-color: #1A73E8;" onclick="showSuccessMessage()">+</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Detalles de la compra -->
                <div class="col-md-6">
                    <h4 style="font-family: Raleway; color: #FF7043;">Detalles de la Compra</h4>
                    <ul class="list-group mb-3" style="font-family: Roboto;">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Gafas de Sol</span>
                            <span>$50.00</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Lentes Recetados</span>
                            <span>$120.00</span>
                        </li>
                    </ul>

                    <div class="form-group">
                        <label for="notaCredito" style="font-family: Raleway;">Aplicar Nota de Crédito</label>
                        <select id="notaCredito" class="form-control" onchange="actualizarTotal()" style="font-family: Roboto;">
                            <option value="0">-- Seleccionar --</option>
                            <option value="20">Nota Crédito #1 - $20.00</option>
                            <option value="50">Nota Crédito #2 - $50.00</option>
                        </select>
                    </div>

                    <div class="mt-3">
                        <p><strong>Total original:</strong> $<span id="totalOriginal">170.00</span></p>
                        <p><strong>Descuento nota de crédito:</strong> $<span id="descuento">0.00</span></p>
                        <h5 style="color: #D32F2F;"><strong>Total ajustado:</strong> $<span id="totalFinal">170.00</span></h5>
                    </div>

                    <button class="btn btn-primary w-100 mt-2" style="background-color: #00B5E2; border-color: #00B5E2; font-family: Poppins;" onclick="showSuccessMessage()">
                        Procesar Pago
                    </button>

                    <a href="@Url.Action("Index", "NotaCredito")" class="btn btn-outline-info w-100 mt-2" style="font-family: Poppins;">
                        Ver Notas de Crédito
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #00B5E2; color: #FFFFFF;">
                <h5 class="modal-title" id="successModalLabel">Éxito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="font-family: Roboto;">
                La operación se realizó con éxito.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #D32F2F; color: #FFFFFF;">
                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="font-family: Roboto;">
                Ha ocurrido un error. Inténtelo de nuevo.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function actualizarTotal() {
        var totalOriginal = 170.00;
        var descuento = parseFloat(document.getElementById("notaCredito").value);
        var totalFinal = (totalOriginal - descuento).toFixed(2);
        document.getElementById("descuento").innerText = descuento.toFixed(2);
        document.getElementById("totalFinal").innerText = totalFinal;
    }

    function showSuccessMessage() {
        var successModal = new bootstrap.Modal(document.getElementById('successModal'));
        successModal.show();
    }

    function showErrorMessage() {
        var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
        errorModal.show();
    }
</script>
