@model List<HDOpticasJAVS.Models.PuntoVenta>

@{
    ViewBag.Title = "Administración Punto de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg w-100" style="max-width: 1100px; background: rgba(0, 0, 0, 0.75); color: #F1E0C6; border-radius: 15px;">

        <div class="card-header text-center" style="background-color: #1A73E8; color: black; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 class="fw-bold" style="font-family: 'Poppins', sans-serif;">@ViewBag.Title</h2>
        </div>

        <div class="card-body" style="font-family: 'Roboto', sans-serif;">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="text-end mb-4 d-flex flex-wrap justify-content-end gap-2">
                <a href="@Url.Action("Create", "PuntoVenta")" class="btn btn-success">➕ Registrar Venta</a>
                <a href="@Url.Action("Index", "NotaCredito")" class="btn btn-outline-warning">📄 Ver Notas Aplicadas</a>
                <a href="@Url.Action("ExportarReporteEmpleado", "PuntoVenta")" class="btn btn-outline-info">📥 Exportar Ventas (CSV)</a>
                <a href="@Url.Action("ReportePorEmpleado", "PuntoVenta")" class="btn btn-outline-primary">👥 Reporte por Empleado</a>
                <a href="@Url.Action("Tendencias", "PuntoVenta")" class="btn btn-outline-light">📈 Ver Tendencias</a>
            </div>

            <table class="table table-dark table-hover table-bordered">
                <thead class="table-light text-dark" style="font-family: Raleway;">
                    <tr>
                        <th># Venta</th>
                        <th>ID Producto</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>IVA</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Nota de Crédito</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody style="font-family: Roboto;">
                    @foreach (var venta in Model)
                    {
                        <tr>
                            <td>@venta.Id_Venta</td>
                            <td>@venta.Id_Producto</td>
                            <td>@venta.Cantidad</td>
                            <td>₡@venta.Subtotal</td>
                            <td>₡@venta.IVA</td>
                            <td>₡@venta.Total</td>
                            <td>@venta.Fecha_Venta.ToShortDateString()</td>
                            <td>@venta.Hora_Venta</td>
                            <td>
                                @{
                                    var notaAplicada = ViewBag.NotasCreditoAplicadas != null && ((List<int>)ViewBag.NotasCreditoAplicadas).Contains(venta.Id_Venta);
                                }
                                @if (notaAplicada)
                                {
                                    <span class="badge bg-success">Aplicada</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("CrearNotaCredito", "PuntoVenta", new { id = venta.Id_Venta })" class="btn btn-sm btn-outline-warning">Aplicar</a>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Detalles", "PuntoVenta", new { id = venta.Id_Venta })" class="btn btn-info btn-sm">Ver</a>
                                <a href="@Url.Action("Edit", "PuntoVenta", new { id = venta.Id_Venta })" class="btn btn-warning btn-sm">Editar</a>
                                @using (Html.BeginForm("Delete", "PuntoVenta", new { id = venta.Id_Venta }, FormMethod.Post, new { onsubmit = "return confirm('¿Desea eliminar esta venta?');", style = "display:inline;" }))
                                {
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
