                    <tr>
                        <th>Id Venta</th>
                        <th>Id Producto</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>IVA</th>
                        <th>Total</th>
                        <th>Fecha Venta</th>
                        <th>Hora Venta</th>
                        <th>Acciones</th>
                    </tr>
