@model HDOpticasJAVS.Models.ViewModels.CampaniaMarketingViewModel

@{
    ViewBag.Title = "Editar Campaña de Marketing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@if (TempData["Mensaje"] != null)
{
    var mensaje = TempData["Mensaje"].ToString();
    var esError = mensaje.Contains("⚠️");
    <div class="alert @(esError ? "alert-warning" : "alert-success")">
        @mensaje
    </div>
}


@using (Html.BeginForm("EditarHistorial", "Marketing", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id_Campania)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre_Campania)
        @Html.TextBoxFor(m => m.Nombre_Campania, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Tipo)
        @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Fecha_Inicio)
        @Html.TextBoxFor(m => m.Fecha_Inicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Fecha_Programada, "Fecha Programada (opcional)")
        @Html.TextBoxFor(m => m.Fecha_Programada, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a href="@Url.Action("Historial", "Marketing")" class="btn btn-secondary">Cancelar</a>
}
