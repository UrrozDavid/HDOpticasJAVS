@model List<HDOpticasJAVS.LogSistema>

@{
    ViewBag.Title = "Registro de Errores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">🧾 Registro de Errores del Sistema</h2>

@if (!Model.Any())
{
    <div class="alert alert-success">No hay errores recientes registrados.</div>
}
else
{
    <table class="table table-bordered table-striped bg-dark text-white mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Fecha</th>
                <th>Módulo</th>
                <th>Mensaje</th>
                <th>Usuario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@log.Modulo</td>
                    <td>@log.Mensaje</td>
                    <td>@log.Usuario</td>
                </tr>
            }
        </tbody>
    </table>
}
