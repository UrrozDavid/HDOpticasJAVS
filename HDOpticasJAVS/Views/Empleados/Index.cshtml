@{
    ViewBag.Title = "Empleados Registrados";
}

<h2>@ViewBag.Title</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a href="@Url.Action("Crear")" class="btn btn-primary">Registrar Nuevo Empleado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Contacto de emergencia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <td>
            <td>María Fernanda López</td>
            <td>1-2345-6789</td>
            <td>8888-1234</td>
            <td>maria.lopez@example.com</td>
            <td>San José, Costa Rica</td>
            <td>Carlos López - 8822-3344</td>
        </td>
            <form method="post" action="@Url.Action("VerEmpleado", "Empleados")" style="display:inline;">
                <input type="hidden" name="Nombre" value="María Fernanda López" />
                <input type="hidden" name="Cedula" value="1-2345-6789" />
                <input type="hidden" name="Telefono" value="8888-1234" />
                <input type="hidden" name="Correo" value="maria.lopez@example.com" />
                <input type="hidden" name="Direccion" value="San José, Costa Rica" />
                <input type="hidden" name="ContactoEmergencia" value="Carlos López - 8822-3344" />
                <button type="submit" class="btn btn-info btn-sm">Ver</button>
            </form>
                <a href="@Url.Action("Editar")" class="btn btn-warning btn-sm">Editar</a>
            </td>
        </tr>
    </tbody>
</table>
