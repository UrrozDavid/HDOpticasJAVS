

@{
    Layout = null;
    ViewBag.Title = "Iniciar Sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar Sesión - HD Ópticas JAVS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto:wght@400;500&display=swap">
    <style>
        body {
            position: relative;
            background: url('/img/optica-bg.jpg') no-repeat center center;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Roboto', sans-serif;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: -1;
            }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
            text-align: center;
            border-top: 5px solid #00B5E2;
        }

        h2 {
            font-family: 'Montserrat', sans-serif;
            color: #01579B;
        }

        .btn-primary {
            background-color: #00B5E2;
            border-color: #00B5E2;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #01579B;
                border-color: #01579B;
            }

        .form-control {
            border-radius: 5px;
            border: 1px solid #A9A9A9;
        }

        .login-options {
            margin-top: 1rem;
        }

            .login-options a {
                text-decoration: none;
                color: #00B5E2;
                font-size: 0.9rem;
            }

                .login-options a:hover {
                    color: #01579B;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    @{
        string returnUrl = Request.QueryString["returnUrl"];
    }

    <div class="login-container">
        <h2>Iniciar Sesión</h2>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Mensaje
            </div>
        }

        <form action="@Url.Action("Login", "Account")" method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div class="mb-3">
                <input type="text" name="Usuario" class="form-control" placeholder="Usuario" required>
            </div>
            <div class="mb-3">
                <input type="password" name="Contrasenia" class="form-control" placeholder="Contraseña" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>

            <div class="login-options">
                <a href="@Url.Action("Recuperar", "Account")">¿Olvidaste tu contraseña?</a> <br>
                <a href="@Url.Action("RegistroCliente", "Account")">Crear una cuenta</a>
            </div>
        </form>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            const motivo = "@Request.QueryString["motivo"]";
            if (motivo === "timeout") {
                alert("Tu sesión se cerró automáticamente por inactividad.");
            }
        });
    </script>
}