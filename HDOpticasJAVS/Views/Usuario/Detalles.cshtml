@model HDOpticasJAVS.Models.UsuarioViewModel
@{
    ViewBag.Title = "Detalles Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="titulo">Detalles del Usuario</h2>
                </div>
                <div class="card-body">
                    <p><strong>Cédula:</strong> @Model.Cedula</p>
                    <p><strong>Nombre:</strong> @Model.Nombre @Model.Apellido1 @Model.Apellido2</p>
                    <p><strong>Rol:</strong> @Model.Rol</p>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>