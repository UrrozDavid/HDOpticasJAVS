@model HDOpticasJAVS.Usuario

@{
    ViewBag.Title = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="titulo">Editar Usuario</h2>
                </div>
                <div class="card-body bg-dark">
                    @using (Html.BeginForm("Editar", "Usuario", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Cedula)

                        <div class="form-group">
                            <label>Cédula:</label>
                            @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            <label>Nombre:</label>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Primer Apellido:</label>
                            @Html.TextBoxFor(model => model.Apellido1, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Segundo Apellido:</label>
                            @Html.TextBoxFor(model => model.Apellido2, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Correo:</label>
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", type = "email", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Fecha de Nacimiento:</label>
                            @Html.TextBoxFor(model => model.FechaNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>
                        <div class="form-group">
                            <label>Contraseña:</label>
                            <div class="input-group">
                                @Html.TextBox("Contrasenia", "********", new { @class = "form-control", @readonly = "readonly", type = "password" })
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-danger" onclick="enviarCorreoRecuperacion('@Model.Correo')">Enviar cambio</button>
                                </div>
                            </div>
                            <small class="form-text text-muted">No editable. Puedes enviar un enlace para cambiarla.</small>
                        </div>
                        <div class="form-group">
                            <label>Rol:</label>
                            @Html.DropDownListFor(model => model.Id_Rol, (SelectList)ViewBag.Id_Rol, "Seleccione un rol", new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Estado:</label>
                            @Html.TextBoxFor(model => model.Estado, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        <button type="submit" class="btn btn-warning btn-block">Actualizar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function enviarCorreoRecuperacion(correo) {
            if (confirm("¿Deseas enviar un enlace para cambiar la contraseña?")) {
                fetch('@Url.Action("EnviarRecuperacion", "Usuario")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ correo: correo })
                })
                .then(res => res.json())
                .then(msg => alert(msg))
                .catch(err => alert("Error al enviar el correo."));
            }
        }
    </script>
}