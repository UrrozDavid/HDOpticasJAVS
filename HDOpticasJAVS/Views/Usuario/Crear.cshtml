@model HDOpticasJAVS.Models.Usuario

@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="titulo">Registrar Usuario</h2>
                </div>
                <div class="card-body">
                    <form asp-action="GuardarUsuario" method="post">
                        <div class="form-group">
                            <label for="Cedula">Cédula:</label>
                            <input type="text" asp-for="Cedula" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="Nombre">Nombre:</label>
                            <input type="text" asp-for="Nombre" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="Apellido1">Primer Apellido:</label>
                            <input type="text" asp-for="Apellido1" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="Apellido2">Segundo Apellido:</label>
                            <input type="text" asp-for="Apellido2" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Id_Rol">Rol:</label>
                            <select asp-for="Id_Rol" class="form-control" asp-items="ViewBag.Roles" required>
                                <option value="">Seleccione un rol</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Correo">Correo:</label>
                            <input type="email" asp-for="Correo" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Contrasenia">Contraseña:</label>
                            <input type="password" asp-for="Contrasenia" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-3">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>