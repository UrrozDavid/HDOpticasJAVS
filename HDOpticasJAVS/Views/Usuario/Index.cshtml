@model List<HDOpticasJAVS.Usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg" style="max-width: 900px; width: 100%; background: rgba(0, 0, 0, 0.7); color: #F1E0C6; border-radius: 15px;">
        <div class="card-header text-center" style="background-color: #1A73E8; color: white; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h2 class="fw-bold" style="font-family: 'Poppins', sans-serif;">@ViewBag.Title</h2>
        </div>
        <div class="card-body" style="font-family: 'Roboto', sans-serif;">
            <div class="text-end mt-3">
                <a href="@Url.Action("CrearCliente", "Usuario")" class="btn btn-success me-2">Crear Usuario Cliente</a>
                <a href="@Url.Action("CrearEmpleado", "Usuario")" class="btn btn-primary">Crear Usuario Empleado</a>
            </div>

            <table class="table table-dark table-hover table-bordered rounded mt-4">
                <thead class="table-light text-dark">
                    <tr class="text-center">
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Cedula</td>
                            <td>@usuario.Nombre @usuario.Apellido1 @usuario.Apellido2</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.Parametro.Nombre_Parametro</td>
                            <td class="text-center">
                                <a href="@Url.Action("Detalles", new { cedula = usuario.Cedula })" class="btn btn-info btn-sm me-1">Ver</a>
                                <a href="@Url.Action("Editar", "Usuario", new { cedula = usuario.Cedula })" class="btn btn-warning btn-sm me-1">Editar</a>
                                <a href="@Url.Action("Eliminar", new { cedula = usuario.Cedula })" class="btn btn-danger btn-sm"
                                   onclick="return confirm('¿Estás seguro que deseas eliminar este usuario?')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>