@{
    ViewBag.Title = "Aplicar Nota de Crédito";
}

<h2>Aplicar Nota de Crédito</h2>

<form method="post">
    <input type="hidden" name="id" value="@ViewBag.IdNota" />
    <div class="form-group">
        <label>ID de la nueva venta</label>
        <input type="number" name="nuevaVentaId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Aplicar</button>
</form>
