@{
    ViewBag.Title = "Editar Empleado";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Nombre Completo</label>
        <input type="text" name="Nombre" class="form-control" value="@ViewBag.EmpleadoNombre" />
    </div>
    <div class="form-group">
        <label>Cédula</label>
        <input type="text" name="Cedula" class="form-control" value="@ViewBag.Cedula" />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <input type="text" name="Telefono" class="form-control" value="@ViewBag.Telefono" />
    </div>
    <div class="form-group">
        <label>Correo</label>
        <input type="email" name="Correo" class="form-control" value="@ViewBag.Correo" />
    </div>
    <div class="form-group">
        <label>Direccion</label>
        <input type="text" name="Direccion" class="form-control" value="@ViewBag.Direccion" />
    </div>
    <div class="form-group">
        <label>Contacto de Emergencia</label>
        <input type="text" name="Contacto" class="form-control" value="@ViewBag.ContactoEmergencia" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
