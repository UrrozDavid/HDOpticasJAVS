
@model List<HDOpticasJAVS.Models.ReporteVenta>
@{
    ViewBag.Title = "Reporte de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Reporte Diario</h2>
    <form method="post" action="@Url.Action("ReporteDiario", "ReporteVenta")" class="row g-3 mb-4">
        <div class="col-md-6">
            <label for="fecha" class="form-label">Seleccionar Fecha</label>
            <input type="date" name="fecha" class="form-control" required />
        </div>
        <div class="col-md-6 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="alert alert-info">
            <strong>Total Ventas:</strong> ₡@ViewBag.TotalVentas<br />
            <strong>Cantidad Transacciones:</strong> @ViewBag.CantidadTransacciones
        </div>

        <h5>Métodos de Pago:</h5>
        <ul>
            @foreach (var metodo in ViewBag.MetodosPago)
            {
                <li>@metodo.Metodo: ₡@metodo.Total</li>
            }
        </ul>

        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID Venta</th>
                    <th>Fecha</th>
                    <th>Método de Pago</th>
                    <th>Total</th>
                    <th>Empleado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model)
                {
                    <tr>
                        <td>@venta.Id_Venta</td>
                        <td>@venta.Fecha_Venta.ToShortDateString()</td>
                        <td>@venta.MetodoPago</td>
                        <td>₡@venta.Total</td>
                        <td>@venta.Empleado</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="container mt-5">
            <div class="card shadow-lg" style="background-color: rgba(0,0,0,0.85); color: #F1E0C6; border-radius: 15px;">
                <div class="card-header text-center" style="background-color: #1A73E8; color: white; border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <h2 class="fw-bold" style="font-family: 'Poppins', sans-serif;">Reportes de Venta</h2>
                </div>
                <div class="card-body text-center">
                    <p class="mb-4" style="font-family: 'Roboto';">Seleccione el tipo de reporte que desea visualizar:</p>

                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <a href="@Url.Action("ReporteDiario", "ReporteVenta")" class="btn btn-outline-light w-100">📅 Reporte Diario</a>
                        </div>
                        <div class="col">
                            <a href="@Url.Action("ReporteMensual", "ReporteVenta")" class="btn btn-outline-light w-100">📆 Reporte Mensual</a>
                        </div>
                        <div class="col">
                            <a href="@Url.Action("ReportePorMetodoPago", "ReporteVenta")" class="btn btn-outline-light w-100">💳 Reporte por Método de Pago</a>
                        </div>
                        <div class="col">
                            <a href="@Url.Action("ReporteProductosMasVendidos", "ReporteVenta")" class="btn btn-outline-light w-100">🔥 Productos Más Vendidos</a>
                        </div>
                        <div class="col">
                            <a href="@Url.Action("ReportePorEmpleado", "ReporteVenta")" class="btn btn-outline-light w-100">👩‍💼 Reporte por Empleado</a>
                        </div>
                        <div class="col">
                            <a href="@Url.Action("Tendencias", "ReporteVenta")" class="btn btn-outline-light w-100">📈 Tendencias de Venta</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
