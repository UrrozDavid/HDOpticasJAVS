@{
    ViewBag.Title = "Editar Cita";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="Nombre" class="form-control" value="@ViewBag.ClienteNombre" />
    </div>
    <div class="form-group">
        <label>Fecha cia</label>
        <input type="date" name="Fecha cita" class="form-control" value="@ViewBag.FechaCita" />
    </div>
    <div class="form-group">
        <label>Hora cita</label>
        <input type="time" name="Hora cita" class="form-control" value="@ViewBag.HoraCita" />
    </div>
    <div class="form-group">
        <label>Especialidad</label>
        <input type="text" name="Especialidad" class="form-control" value="@ViewBag.Especialidad" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <input type="text" name="Estado" class="form-control" value="@ViewBag.Estado" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
